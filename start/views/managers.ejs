<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %>

    <body class="bg-yellow-300 min-h-screen p-6 max-w-7xl mx-auto">
        <!-- Header -->
        <%- include("./partials/header.ejs") %>

            <!-- Manager Table -->
            <div class="bg-white border-4 border-black neo-shadow overflow-hidden">
                <div class="bg-black text-white p-4">
                    <h2 class="text-2xl font-bold">EVENT MANAGER LIST</h2>
                </div>

                <!-- Table -->
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-pink-400 border-b-4 border-black">
                            <tr>
                                <th class="border-r-4 border-black p-4 text-left font-bold text-black">NAME</th>
                                <th class="border-r-4 border-black p-4 text-left font-bold text-black">PHONE NUMBER</th>
                                <th class="border-r-4 border-black p-4 text-left font-bold text-black">IN CHARGE FOR
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% managers.forEach((manager)=> { %>
                                <tr
                                    class="bg-purple-100 border-b-2 border-black hover:bg-orange-200 transition-colors duration-200">
                                    <td class="border-r-2 border-black p-4 font-bold text-black">
                                        <%= manager.name %>
                                    </td>
                                    <td class="border-r-2 border-black p-4 font-bold text-black">
                                        <%= manager.phone %>
                                    </td>
                                    <td class="border-r-2 border-black p-4">
                                        <span
                                            class="bg-cyan-300 border-2 border-black px-3 py-1 text-black font-bold text-sm">
                                            <%= manager?.Game?.name %>
                                        </span>
                                    </td>
                                </tr>
                                <%}) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Footer -->
            <%- include("./partials/footer.ejs") %>
    </body>

</html>